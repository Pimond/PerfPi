<Window x:Class="PerfPi.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="PerfPi" Width="210" Height="120"
        WindowStyle="None" ResizeMode="NoResize"
        AllowsTransparency="True" Background="Transparent" Topmost="True"
        ShowInTaskbar="False"
        Loaded="Window_Loaded" SourceInitialized="Window_SourceInitialized"
        MouseDown="Window_MouseDown" KeyDown="Window_KeyDown">
  <Border CornerRadius="10" Padding="8" Opacity="{Binding OverlayOpacity}">
    <Border.Background>
      <SolidColorBrush Opacity="0.18" Color="#111111"/>
    </Border.Background>
    <StackPanel>
      <TextBlock Name="OverlayText" FontFamily="Consolas" FontSize="{Binding FontSize}"
                 Foreground="White" TextWrapping="NoWrap"/>
      <TextBlock FontFamily="Consolas" FontSize="10" Foreground="#77FFFFFF"
                 Text="Ctrl+Shift+P toggle clicks â€¢ Drag to move (when enabled)"/>
    </StackPanel>
  </Border>
</Window>
