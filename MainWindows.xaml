<Window x:Class="PerfPi.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="PerfPi"
        SizeToContent="WidthAndHeight"
        WindowStyle="None" ResizeMode="NoResize"
        AllowsTransparency="True" Background="Transparent" Topmost="True"
        ShowInTaskbar="False"
        Loaded="Window_Loaded" SourceInitialized="Window_SourceInitialized"
        MouseLeftButtonDown="Window_MouseLeftButtonDown"
        MouseLeftButtonUp="Window_MouseLeftButtonUp"
        KeyDown="Window_KeyDown">
  <Border CornerRadius="10" Padding="10" Opacity="{Binding OverlayOpacity}">
    <Border.Background>
      <SolidColorBrush Opacity="0.18" Color="#111111"/>
    </Border.Background>

    <StackPanel>
      <TextBlock Name="OverlayText"
                 FontFamily="Consolas"
                 FontSize="{Binding FontSize}"
                 Foreground="White"
                 TextWrapping="Wrap"
                 MaxWidth="360" />
      <TextBlock FontFamily="Consolas" FontSize="10" Foreground="#77FFFFFF"
                 Text="Alt + double-click toggles click-through â€¢ Drag to move (when interactive)"/>
    </StackPanel>
  </Border>
</Window>
